---
interface Props {
	date: Date;
}

const { date } = Astro.props;
---

<time datetime={date.toISOString()} class="font-['Josefin_Sans'] font-light mb-1 text-xs text-gray-600">
	{
		date.toLocaleDateString('ja-jp', {
			year: 'numeric',
			month: '2-digit',
			day: '2-digit',
		}).replace(/\//g, '-')
	}
</time>
